{
  "name": "equippers.de",
  "version": "1.0.0",
  "description": "Website of Equippers Germany and Berlin.",
  "scripts": {
    "start": "bundle exec jekyll serve --host 0.0.0.0 --livereload --open-url",
    "build": "bundle exec jekyll build",
    "build:prod": "JEKYLL_ENV=production bundle exec jekyll build",
    "bundle": "tsc --project _js && rollup --config _js/rollup.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "simonhaenisch/cloudcannon-boilerplate",
  "author": "Simon Haenisch (https://github.com/simonhaenisch",
  "license": "UNLICENSED",
  "bugs": "https://github.com/simonhaenisch/cloudcannon-boilerplate/issues",
  "homepage": "https://github.com/simonhaenisch/cloudcannon-boilerplate#readme",
  "devDependencies": {
    "@types/googlemaps": "3.39.13",
    "@types/grecaptcha": "3.0.1",
    "prettier": "2.1.1",
    "prettier-plugin-organize-imports": "1.1.1",
    "rollup": "2.26.10",
    "stylus": "0.54.8",
    "typescript": "4.0.2"
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": true,
    "overrides": [
      {
        "files": [
          "package.json"
        ],
        "options": {
          "arrowParens": "avoid",
          "useTabs": false
        }
      }
    ]
  }
}
