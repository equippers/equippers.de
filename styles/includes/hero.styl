.hero
	min-height: 50vh
	max-height: 100vw

	background-size: cover
	background-position: center

	makeGrid(1fr)
	align-items: center
	justify-items: center

	addTransparentBackgroundOverlay(0.4)

	.content
		text-align: center
		text-transform: uppercase
		margin-top: 2.25rem // compensates for header height and h1 margin
		@extend .padding-vertical

		@media (min-width: $tablet-breakpoint)
			font-size: 1.25em
