.hero
	height: 50vh
	max-height: 100vw

	background-color: $dark-gray
	background-size: cover
	background-position: center

	display: grid
	align-items: center
	justify-items: center

	addTransparentBackgroundOverlay(0.4)

	.content
		color: $white
		text-align: center
		text-transform: uppercase
		margin-top: 2.25rem // fixes header height and h1 margin

		@media (min-width: $tablet-breakpoint)
			font-size: 1.25em
