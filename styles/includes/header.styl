header
	z-index: 100
	position: absolute
	padding: 1.5em

	@media (min-width: $tablet-breakpoint)
		padding: 2em

	@media (min-width: $desktop-breakpoint)
		padding: 2.5em

	width: 100%
	height: 4em

	makeGrid(200px 1fr, 3em)

	a[aria-label=logo]
		line-height: 0
		align-self: center
		width: 100% // needed for mobile safari

	nav
		grid-column: 1 / span 2
		order: 1 // moves it to the end
		height: 100%

	button
		justify-self: end
		align-self: center

	&::after
		content: ''
		position: absolute
		z-index: -1
		width: 100vw
		height: 100vh
		background: $dark-gray

	nav
	&::after
		addTransition(transform)
		transform: translateX(-100%)

	svg
		fill: $white

		&:hover
			fill: $yellow

	nav
		makeGrid()

		a
			color: $white
			text-decoration: none
			text-transform: uppercase
			@extends .bold-font
			font-size: 1.5em
			addTransition(color)

			&.active
				color: $light-gray

			&:hover
				color: $yellow

	button
		font-size: 1rem;

	@media (min-width: $desktop-breakpoint)
		height: auto

		grid-template-columns: 1fr
		grid-auto-flow: column
		grid-column-gap: 1.5em
		align-items: center

		&::after
			content: none

		svg
			width: 200px

		nav
			order: initial
			grid-column: initial
			grid-template-columns: 1fr
			grid-auto-flow: column
			align-items: center

			transform: translateX(150%)

			a
				font-size: 0.85em

// --
// Burger Button

header button
	outline: none
	background: none
	border: none

	burger-dash()
		width: 1.5em
		height: 0.125em
		display: block
		background: $white
		addTransition(transform)

	.burger
		burger-dash()
		position: relative
		margin: 0.5em 0

		&::before
		&::after
			burger-dash()
			content: ''
			position: absolute

		&::before
			top: -0.5em

		&::after
			bottom: -0.5em

// --
// Visible State

header.nav-visible
	position: fixed

	&::after
	nav
		transform: translateX(0)

	.burger
		background: none

		&::before
			top: 0
			transform: rotate(-45deg)

		&::after
			bottom: 0
			transform: rotate(45deg)

	@media (min-width: $desktop-breakpoint)
		position: absolute
