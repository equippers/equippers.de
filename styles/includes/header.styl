$header-height = 4em
$logo-padding = 1.25em

header
	& + *
		padding-top: $header-height - $logo-padding

	position: fixed
	&:not(.nav-visible)
		position: absolute

	z-index: 100
	width: 100%
	height: 0
	top: 0
	padding-left: 1.5em
	padding-right: @padding-left

	makeGrid(auto 1fr, auto 1fr, 0)
	align-items: center

	a[aria-label=logo]
		height: $header-height

		makeGrid(1fr, gap: 0)
		align-items: center

		svg
			height: 100%
			max-width: 10em
			padding: $logo-padding 0

			addTransition(fill)
			fill: $white
			&:hover
				fill: $yellow

	button
		justify-self: end
		align-self: center

	nav
		grid-column: 1 / span 2
		height: "calc(100vh - %s)" % $header-height

		makeGrid(1fr)
		justify-items: center
		align-content: center
		text-align: center

		a
			text-decoration: none
			text-transform: uppercase
			@extends .bold-font

			addTransition(color)
			color: $white
			&.active
				color: $light-gray
			&:hover
				color: $yellow

	&::after
		content: ''
		position: absolute
		top: 0
		width: 100vw
		height: 110vh
		background-color: $dark-gray
		z-index: -1

		backdrop-blur = 7px
		@supports (-webkit-backdrop-filter: blur(backdrop-blur)) or (backdrop-filter: blur(backdrop-blur))
			background-color: rgba($dark-gray, 0.9)
			-webkit-backdrop-filter: blur(backdrop-blur)
			backdrop-filter: blur(backdrop-blur)

	&::after
	nav
		addTransition(transform)

	&:not(.nav-visible)::after
	&:not(.nav-visible) nav
		transform: translateX(-100%)

	@media (min-width: $tablet-breakpoint)
		position: absolute
		height: auto

		&::after
		button
			display: none

		nav
			height: auto
			transform: none !important

			grid-column: auto
			justify-self: end

			grid-auto-flow: column

			font-size: 0.8em

	@media (min-width: $desktop-breakpoint)
		padding: 1.25em 2.5em

		& + *
			padding-top: $header-height - $logo-padding + 1.25em

	nav
		font-size: 1.5em

		@media (min-width: $tablet-breakpoint)
			font-size: 0.8em

		@media (min-width: $desktop-breakpoint)
			font-size: 1em


// --
// Burger

header
	button
		font-size: 1rem
		background: none
		border: none
		outline: none

		burger-dash()
			width: 1.5em
			height: 0.125em
			display: block
			background-color: snow
			addTransition(transform)

		.burger
			burger-dash()
			position: relative
			margin: 0.5em 0

			&::before
			&::after
				burger-dash()
				content: ''
				position: absolute

			&::before
				top: -0.5em

			&::after
				bottom: -0.5em

	&.nav-visible
		.burger
			background: none

			&::before
				top: 0
				transform: rotate(-45deg)

			&::after
				bottom: 0
				transform: rotate(45deg)


// --
// Non-Grid Fallback

non-grid-header-props =
	& + *
		padding-top: 0

	height: auto
	text-align: center
	background: lighten(black, 20%)

	&
	nav
		position: relative !important
		display: block

	&::after
	button
		display: none

	a[aria-label="logo"]
		display: inline-block
		height: 3em
		padding: 1em 0

		svg
			padding: 0

	nav
		height: auto
		transform: none !important
		padding-bottom: 1em

		a
			display: block
			margin-top: 0.5em

	@media (min-width: $tablet-breakpoint)
		text-align: left

		nav
			padding-top: 1.25em
			float: right

			a
				display: inline
				margin-left: 0.5em

// fix for IE10/11 (which doesn't support feature queries)
@media all and (-ms-high-contrast:none)
	header
		{non-grid-header-props}

// fix for browsers that don't support grid
@supports not (grid-template-columns: 1fr)
	header
		{non-grid-header-props}
