.button
	display: inline-block
	padding: 0.75em 1.5em
	border-radius: 3px
	text-decoration: none
	background-color: $light-gray
	color: $dark-gray
	addTransition("background-color, color")

	&:hover
		background-color: $black
		color: $white

	&::before
		content: '\0000BB'
		padding-right: 0.25em
		font-size: 1.4em
		line-height: 0


	&.outline
		border: 1px solid

	&.white
		background-color: $white
		&:hover
			background-color: $black
