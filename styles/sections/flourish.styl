.flourish

	ul.languages
		margin: 0
		padding: 0

		li
			list-style-type: none
			display: inline
			margin-right: 0.75em

			a
				text-decoration: none

				span
					text-decoration: underline

	img.speaker
		width: 100%

		@media(min-width: 30em)
			float: left
			width: 15em
			height: @width
			object-fit: cover
			margin-right: 0.5em
			margin-bottom: @margin-right

	blockquote.testimony
		font-size: 0.8888em
		margin: 1em 0
		padding: 1em
		addBorderRadius()
		background-color: $light-gray
