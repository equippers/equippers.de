.newsletter
	padding 0 0 2em

	form
		makeGrid(1fr, gap: 0)
		grid-column-gap: 1rem
		align-items: center
		grid-template-areas: \
			'name-label' \
			'name' \
			'email-label' \
			'email' \
			'submit'

		label
			padding: 0.2rem 0

			&:first-of-type
				grid-area: name-label

			&:last-of-type
				grid-area: email-label

		input
			margin-bottom: 1rem

			&:first-of-type
				grid-area: name

			&:last-of-type
				grid-area: email

		button
			line-height: 1
			grid-area: submit
			addBorderRadius(1px)

		@media(min-width: $tablet-breakpoint)
			grid-template-columns: 1fr 1fr
			grid-template-areas: \
				'name-label email-label' \
				'name email' \
				'submit submit'

		@media(min-width: $desktop-breakpoint)
			grid-template-columns: 1fr 1fr auto
			grid-template-areas: \
				'name-label email-label email-label' \
				'name email submit'

			input
				margin-bottom: 0
