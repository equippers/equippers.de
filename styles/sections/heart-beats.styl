.heart-beats
	display: grid
	grid-template-columns: 1fr
	grid-gap: 2rem

	@media(min-width: $desktop-breakpoint)
		grid-template-columns: repeat(5, 1fr)
		max-width: 90%
		margin: 0 auto

	.beat
		background-color: $light-gray
		addBorderRadius()

	.drop-cap
		@extends .black-font
		font-size: 5em
		line-height: 1

	p
		font-size: 0.9em
