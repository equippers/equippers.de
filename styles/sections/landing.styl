.landing-logo
	width: 100%
	height: 10vh
	min-height: 3em
	background-color: $yellow

	svg
		display: block
		height: 100%
		margin: 0 auto
		padding: 1em
		fill: $dark

.landing
	height: 90vh

	makeGrid(1fr, gap: 0)
	grid-template-rows: repeat(2, 1fr)

	a
		background-size: cover
		background-position: center

		text-decoration: none

		@media (min-width: $tablet-breakpoint)
			font-size: 1.25em

		makeGrid(1fr, gap: 0)
		align-content: center

		border: 0px solid $yellow
		addTransition('border, color')

		&:hover
			border-width: 0.5rem
			color: $yellow

	.save-location-checkbox
		position: fixed
		bottom: 1rem
		right: @bottom
		display: flex
		align-items: center

		label
			line-height: 1
			font-size: 1rem

		input[type="checkbox"]
			margin-left: 0.5rem
