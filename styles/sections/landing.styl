.landing-logo
	width: 100%
	height: 10vh
	min-height: 3em
	background-color: $yellow

	svg
		display: block
		height: 100%
		margin: 0 auto
		padding: 1em
		fill: $dark

.landing
	height: 90vh

	makeGrid(gap: 0)
	grid-template-rows: repeat(3, 1fr)

	a
		background-size: cover
		background-position: center

		text-decoration: none

		@media (min-width: $tablet-breakpoint)
			font-size: 1.25em

		makeGrid(gap: 0)
		align-content: center

		border: 0px solid $yellow
		addTransition('border, color')

		&:hover
			border-width: 0.5rem
			color: $yellow

		addTransparentBackgroundOverlay()
