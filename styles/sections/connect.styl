.connect .grid
	display: grid
	grid-template-columns: repeat(2, 50vw)
	color: $light

	& > div
		height: 50vw
		display: grid
		align-content: center
		justify-content: center
		text-align: center

		&:nth-of-type(1)
			background: $blue
		&:nth-of-type(2)
			background: $green
		&:nth-of-type(3)
			background: $red
		&:nth-of-type(4)
			background: $yellow

		.icon
			font-size: 4em

	@media (min-width: $tablet-breakpoint)
		grid-template-columns: repeat(4, 25vw)

		& > div
			height: 25vw
