.connect .grid
	display: grid
	grid-template-columns: repeat(2, 50vw)
	color: $light

	& > a
	& > div
		text-decoration: none

		height: 50vw
		display: grid
		align-content: center
		justify-content: center
		text-align: center

		&:nth-of-type(1)
			background: $blue
		&:nth-of-type(2)
			background: $purple
		&:nth-of-type(3)
			background: $red
		&:nth-of-type(4)
			background: $orange

		.icon svg
			fill: $light
			width: 3em
			height: @width
			margin-bottom: 0.25em

			@media (min-width: $desktop-breakpoint)
				width: 5em
				height: @width

	@media (min-width: $tablet-breakpoint)
		grid-template-columns: repeat(4, 25vw)

		& > a
		& > div
			height: 25vw
