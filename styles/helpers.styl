// --
// Margins

.margin
	margin: 1rem

.margin-top
	margin-top: 1rem

.margin-bottom
	margin-bottom: 1rem

.margin-vertical
	@extends .margin-top
	@extends .margin-bottom

.no-margin
	margin: 0 !important

.no-margin-top
	margin-top: 0 !important

.no-margin-bottom
	margin-bottom: 0 !important

.no-margin-vertical
	@extends .no-margin-top
	@extends .no-margin-bottom

.no-margin-after
	margin-bottom: 0

	& + *
		margin-top: 0

// --
// Paddings

.padding
	padding: 1rem

.padding-top
	padding-top: 1rem

.padding-bottom
	padding-bottom: 1rem

.padding-vertical
	@extends .padding-top
	@extends .padding-bottom

.padding-left
	padding-left: 1rem

.padding-right
	padding-right: 1rem

.padding-horizontal
	@extends .padding-left
	@extends .padding-right

.no-padding
	padding: 0

.no-padding-top
	padding-top: 0

.no-padding-bottom
	padding-bottom: 0

.no-padding-vertical
	padding-top: 0
	padding-bottom: 0

.no-padding-horizontal
	padding-left: 0
	padding-right: 0

// --
// Typography

.max-width
	max-width: 60rem
	margin-left: auto
	margin-right: auto

.text-max-width
	max-width: 45rem

.text-center.text-max-width
.text-center .text-max-width
	margin-left: auto
	margin-right: auto

.text-center
	text-align: center

.uppercase
	text-transform: uppercase

.underline
	text-decoration: underline

.tabular-nums
	font-feature-settings: "tnum"
	font-variant-numeric: tabular-nums

.light-font
	font-weight: 200

.normal-font
	font-weight: 400

.bold-font
	font-weight: 600

.black-font
	font-weight: 900

.dark
	background-color: $black
	color: $light

.overlay
	position: relative

	& > *
		position: relative
		z-index: 1

	&::after
		content: ''
		position: absolute
		top: 0
		left: 0
		z-index: 0
		width: 100%
		height 100%
		background-color: rgba(0, 0, 0, 0.3)

for i in (1..9)
	.overlay.strength-{i}::after
		background-color: rgba(0, 0, 0, i/10)

.super-padding
	padding-top: 10em
	padding-bottom: @padding-top

// --
// Colors

.dark-gray
.dark-grey
	color: $dark-gray

.gray
.grey
	color: $medium-gray

.light-gray
.light-grey
	color: $light-gray

.blue
	color: $blue

.green
	color: $green

.yellow
	color: $yellow

.orange
	color: $orange

.red
	color: $red

.purple
	color: $purple


// --
// Other

.top-dash::before
	content: ''
	display: block
	width: 2rem
	margin-bottom: 0.75rem
	margin-top: 2.5rem
	border-top: 1px solid $dark

.dark .top-dash::before
	border-top-color: $light
